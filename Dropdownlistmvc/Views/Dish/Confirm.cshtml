@model WhatWeEat.Data.Recipe

@using (Html.BeginForm("AddRecipe", "Dish", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.RecipeName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RecipeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RecipeName, "", new { @class = "text-danger" })
            <div class="col-md-pull-10">
                <button  type="submit" id="submitOK" class="btn btn-primary glyphicon glyphicon-check">OK</button>
            </div>
        </div>
    </div>
}
