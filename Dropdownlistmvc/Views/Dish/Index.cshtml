@model IEnumerable<WhatWeEat.Data.Dish>

@{
    ViewBag.Title = "Блюдо";
}

<h2>Блюда</h2>

@if (!string.IsNullOrEmpty(ViewBag.Text))
{
    @ViewBag.Text
}

<p>
    @Html.ActionLink(" Рассказать", "AddDish",null, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UpdateDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeId)
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Recipes.RecipeName)
        </td>
        <td>
            @Html.ActionLink(" ", "Delete", new { Id = item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-remove" }) |
            @Html.ActionLink(" Edit", "Edit", new { Id= item.Id }, new { @class = "btn btn-primary glyphicon glyphicon-ok" })         
        </td>
    </tr>
}
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            if ('@TempData["message"]' === "Deleted") {
               $.notify("Warning: your record has been deleted successfully", "warn");
            }
            if ('@TempData["message"]' === "Save"){
                $.notify("your record has been Saved successfully", "success");
            }
        });
    </script>
}